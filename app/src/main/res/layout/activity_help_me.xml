<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HelpMeActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginLeft="25dp">
            <RadioButton
                    android:text="Feeling Homesick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/radioButton10" android:layout_weight="1"
                    android:textSize="18sp" android:layout_marginTop="20dp" android:checked="true"/>
            <RadioButton
                    android:text="Feeling Lonely"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/radioButton20" android:layout_weight="1"
                    android:layout_marginTop="20dp" android:textSize="18sp"/>
            <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/radioButton30" android:layout_weight="1"
                    android:layout_marginTop="20dp" android:textSize="18sp" android:text="Feeling Depressed"/>
            <RadioButton
                    android:text="Being Ragged"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/radioButton40" android:layout_weight="1"
                    android:textSize="18sp" android:layout_marginTop="20dp"/>
        </RadioGroup>

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/editText3" android:paddingBottom="120px" android:hint="Message"
                android:layout_marginTop="25dp" android:layout_marginLeft="25dp"/>
        <Button
                android:text="Submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button" android:layout_marginTop="20dp"
                android:onClick="hms" android:layout_marginLeft="141dp"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>